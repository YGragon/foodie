<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/item_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_question"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:padding="1dp"
        android:layout_margin="8dp"
        android:src="@mipmap/logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/tv_question_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/iv_question"
        android:text="美食名字美食名字美食名字美食名字美食名字美食名字美食名字美食名字"
        android:maxLines="2"
        android:textColor="#000"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/tv_question_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@id/tv_question_title"
        android:layout_below="@id/tv_question_title"
        android:text="热度：100%"
        android:textColor="@color/text_yellow"
        android:textSize="14sp"

        />
        <TextView
            android:id="@+id/tv_question_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_question_count"
            android:layout_below="@id/tv_question_title"
            android:text="2016-08-24"
            android:textColor="@color/text_yellow"
            android:textSize="14sp"

            />


    </RelativeLayout>

    <View
        android:id="@+id/item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/item_top"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/text_gray" />
</RelativeLayout>
