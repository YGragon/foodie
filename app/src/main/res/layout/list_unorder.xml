<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/unorder_image"
        android:src="@mipmap/dpj"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unorder_image"
        android:id="@+id/unorder_name"
        />
    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:id="@+id/unorder_instruction"
        android:layout_margin="25dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/unorder_image"
        android:textSize="15dp"
        android:text="我爱我家"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add"
        android:layout_toRightOf="@+id/unorder_instruction"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:textSize="25dp"
        android:text="+"
        />

</RelativeLayout>
