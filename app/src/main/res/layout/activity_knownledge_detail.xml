<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dongxi.foodie.activity.KnownledgeDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_knownledge_image"
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/logo"/>
            <TextView
                android:id="@+id/tv_knownledge_mater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_knownledge_image"
                android:layout_margin="5dp"
                android:text="健康知识概述："
                android:textColor="@color/colorAccent"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/tv_knownledge_material"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_knownledge_mater"
                android:layout_margin="5dp"
                android:lineSpacingExtra="5dp"
                android:textSize="20sp"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
