<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edg.foodie.activity.ShowOrderActivity">


    <RelativeLayout
        android:id="@+id/item_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/iv_food"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:src="@mipmap/ic_launcher"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/text_yellow"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:padding="5dp"
            android:ellipsize="end"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_food"
            android:text="美食名字美食名字美食名字美食名字美食名字美食名字美食名字美食名字"
            android:maxLines="2"
            android:textColor="#000"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_below="@id/tv_name"
            android:text="收藏数：10 次"
            android:textColor="@color/text_yellow"
            android:textSize="14sp"

            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="45dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

    <Button
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:id="@+id/btn_subtract"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:background="@drawable/selecter_left"
        android:gravity="center"
        android:text="-"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_number"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="#DDD"
        android:gravity="center"
        android:text=""
        android:textSize="20sp"/>

    <Button
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:id="@+id/btn_add"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:background="@drawable/selecter_right"
        android:text="+"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#777"
        android:gravity="center"
        >

            <Button
                android:id="@+id/food_list_take_order_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/text_yellow"
                android:gravity="center"
                android:text="下单"
                android:singleLine="true"
                android:textColor="@color/text_white"
                android:textSize="17.0sp" />
    </RelativeLayout>
</RelativeLayout>
